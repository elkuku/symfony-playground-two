{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
    <div class="float-end">
        <a class="btn btn-outline-success" href="{{ path('app_user_new') }}">Create new</a>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Identifier</th>
            <th>Role</th>
            <th>Google</th>
            <th>GitHub</th>
            <th>GitLab</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.identifier }}</td>
                <td>
                        <span class="{{ user.role.cssClass }}">
                            {{ user.role.label }}
                        </span>
                <td>{{ user.googleId }}</td>
                <td>{{ user.gitHubId }}</td>
                <td>{{ user.gitLabId }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
