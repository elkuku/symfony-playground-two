{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

<div class="btn-group float-end" role="group" aria-label="Basic example">
    <a class="btn btn-outline-secondary" href="{{ path('app_user_index') }}">back to list</a>

    <a class="btn btn-outline-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
</div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Identifier</th>
                <td>{{ user.identifier }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role.label }}</td>
            </tr>
            <tr>
                <th>Params</th>
                <td>{{ user.params ? user.params|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>GoogleId</th>
                <td>{{ user.googleId }}</td>
            </tr>
            <tr>
                <th>GitHubId</th>
                <td>{{ user.gitHubId }}</td>
            </tr>
            <tr>
                <th>GitLabId</th>
                <td>{{ user.gitLabId }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
